@model src.Models.RouteStop

@{
    ViewData["Title"] = "Edit Route-Stop Link";
}

<h2>Edit</h2>

<h4>Route-Stop</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RouteStopID" />
            <div class="form-group">
                <label asp-for="RouteID" class="control-label"></label>
                <select asp-for="RouteID" class="form-control" asp-items="ViewBag.RouteID"></select>
                <span asp-validation-for="RouteID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StopID" class="control-label"></label>
                <select asp-for="StopID" class="form-control" asp-items="ViewBag.StopID"></select>
                <span asp-validation-for="StopID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Save</button>
                <a asp-action="Index" class="btn">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
