@model src.Models.RouteStop

@{
    ViewData["Title"] = "Delete Route-Stop Link";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Route-Stop</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Route)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Route.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Stop)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Stop.Name)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="RouteStopID" />
