@model src.Models.Staff

@{
    ViewData["Title"] = "Create Staff";
}

<h2>Create</h2>

<h4>Staff</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ApplicationUserID" class="control-label"></label>
                <select asp-for="ApplicationUserID" class ="form-control" asp-items="ViewBag.ApplicationUserID"></select>
            </div>
            <div class="form-group">
                <label asp-for="hoursContracted" class="control-label"></label>
                <input asp-for="hoursContracted" class="form-control" />
                <span asp-validation-for="hoursContracted" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="accountNumber" class="control-label"></label>
                <input asp-for="accountNumber" class="form-control" />
                <span asp-validation-for="accountNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="sortCode" class="control-label"></label>
                <input asp-for="sortCode" class="form-control" />
                <span asp-validation-for="sortCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nationalInsuranceNumber" class="control-label"></label>
                <input asp-for="nationalInsuranceNumber" class="form-control" />
                <span asp-validation-for="nationalInsuranceNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Create</button>
                <a asp-action="Index" class="btn">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
